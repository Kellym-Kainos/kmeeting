{{<template/main}}

{{$title}}kcal - Room Dashboard{{/title}}

{{$content}}
  <h1>{{room.displayName}}</h1>

  {{#status.currentEvent}}
    <div>
      <h2>Current meeting</h2>
      <ul>
        <li>{{subject}}</li>
        <li>{{startTimeString}}</li>
        <li>{{endTimeString}}</li>
      </ul>
    </div>
  {{/status.currentEvent}}
  <p>Available - {{status.available}}</p>
  <p>{{status.durationMessage}}</p>

  <div>
    <h2>Upcoming Meetings</h2>
    <ul>
    {{#eventsList}}
      <li class="{{#isPassed}}passed{{/isPassed}}">
        <span>{{subject}}</span>
        <span>{{startTimeString}}</span>
        <span>{{endTimeString}}</span>
        <span>{{durationString}}</span>
      </li>
    {{/eventsList}}
    </ul>
  </div>

{{/content}}

{{/template/main}}
